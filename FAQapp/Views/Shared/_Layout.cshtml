<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header class="jumbotron">
            <h1 class="text-center">Frequently Asked Questions</h1>
        </header>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-10">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
                    <div class="container text-center">
                        <a class="navbar-brand" asp-area="" asp-controller="" asp-action="">All of the FAQs</a>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" asp-route-genre="" asp-route-id="pow-metal">Power Metal</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" asp-route-genre="" asp-route-id="spd-metal">Speed Metal</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" asp-route-genre="" asp-route-id="sym-metal">Symphonic Metal</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="row">
            <nav class="nav flex-column col-2">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-id="gen">General</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-id="hist">History</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-id="link">Websites</a>
            </nav>

            <main role="main" class="pb-3 col-10">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
